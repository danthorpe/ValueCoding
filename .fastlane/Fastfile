lane :lint do

    swiftLint(
        mode: :lint, 
        config_file: '.swiftlint.yml'
    )
end


platform :ios do

	desc "Runs all the tests"
	lane :test do
    
    	scan(
    		project: "ValueCoding.xcodeproj",
			scheme: "ValueCoding",
      		destination: "platform=iOS Simulator,OS=10.0,name=iPhone 5s",
      		code_coverage: true
	    )

	end
end

platform :mac do
  
	desc "Runs all the tests"
	lane :test do

    	scan(
    		project: "ValueCoding.xcodeproj",
			scheme: "ValueCoding",
			device: "My Mac"
	    )

	end
end
